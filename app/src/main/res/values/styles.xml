<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenBackgroundStyle">
        <item name="android:background">@color/PM_blue</item>
    </style>

    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/PM_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textColor">@color/PM_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    
    <style name="SettingsScreenTextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    
    <style name="SearchFieldColorStyle">
        <item name="android:background">@drawable/rounded_8dp</item>
        <item name="android:drawableTint">@color/PM_text_grey</item>
        <item name="android:textColorHint">@color/PM_text_grey</item>
    </style>

    <style name="DefaultText">
        <item name="android:textColor">@color/PM_black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    
    <style name="TextGreyWhite11sp" parent="DefaultText">
        <item name="android:textColor">@color/PM_grey</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    
    <style name="TrackParameters">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/PM_text_grey</item>
    </style>

    <style name="TextBlackWhite13sp" parent="DefaultText">
        <item name="android:textSize">13sp</item>
    </style>

</resources>