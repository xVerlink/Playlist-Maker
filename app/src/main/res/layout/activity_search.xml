<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/padding">

        <ImageView
            android:id="@+id/search_screen_return_button"
            style="@style/ActivityTitleIconStyle"
            app:tint="?attr/colorPrimary"/>

        <TextView
            style="@style/ActivityTitleTextStyle"
            android:text="@string/search"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/padding"
        android:layout_marginEnd="@dimen/padding">

        <EditText
            android:id="@+id/edit_text_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SearchFieldColorStyle"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_lens"
            android:drawablePadding="10dp"
            android:hint="@string/search"
            android:fontFamily="@font/ys_display_regular"
            android:inputType="text"
            android:textColor="@color/PM_black"
            android:lines="1"
            android:focusable="true">
        </EditText>

        <ImageView
            android:id="@+id/clear_text_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_clear"
            android:visibility="gone">
        </ImageView>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_screen_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>


</LinearLayout>