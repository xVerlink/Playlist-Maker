<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorPrimary"
        app:title="@string/settings"
        app:titleTextAppearance="@style/ToolbarTextStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/padding"
        android:layout_marginEnd="@dimen/padding"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/theme_switcher"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="@string/dark_theme"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/default_text_size"
            android:fontFamily="@font/ys_display_regular">
        </com.google.android.material.switchmaterial.SwitchMaterial>

        <TextView
            android:id="@+id/share_app_button"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            style="@style/SettingsScreenTextStyle"
            android:text="@string/share_app"
            app:drawableEndCompat="@drawable/ic_share">
        </TextView>

        <TextView
            android:id="@+id/text_support_button"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            style="@style/SettingsScreenTextStyle"
            android:text="@string/text_support"
            app:drawableEndCompat="@drawable/ic_support">
        </TextView>

        <TextView
            android:id="@+id/license_agreement_button"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            style="@style/SettingsScreenTextStyle"
            android:text="@string/license_agreement"
            app:drawableEndCompat="@drawable/ic_arrow_right">
        </TextView>

    </LinearLayout>

</LinearLayout>