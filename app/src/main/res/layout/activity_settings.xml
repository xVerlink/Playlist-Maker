<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_screen_return_button"
            style="@style/ActivityTitleIconStyle"
            app:tint="?attr/colorPrimary"/>

        <TextView
            style="@style/ActivityTitleTextStyle"
            android:text="@string/settings"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:text="@string/dark_theme"
                style="@style/SettingsScreenTextStyle"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:text="@string/share_app"
                style="@style/SettingsScreenTextStyle"/>

            <ImageView
                android:id="@+id/shareAppButton"
                style="@style/SettingsScreenIconStyle"
                android:src="@drawable/ic_share" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:text="@string/text_support"
                style="@style/SettingsScreenTextStyle"/>

            <ImageView
                android:id="@+id/textSupportButton"
                style="@style/SettingsScreenIconStyle"
                android:src="@drawable/ic_support"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:text="@string/license_agreement"
                style="@style/SettingsScreenTextStyle"/>

            <ImageView
                android:id="@+id/licenseAgreementButton"
                style="@style/SettingsScreenIconStyle"
                android:src="@drawable/ic_arrow_right"/>

        </FrameLayout>

    </LinearLayout>

    </LinearLayout>