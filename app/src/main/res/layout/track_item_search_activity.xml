<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_screen_album_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="13dp"/>

    <TextView
        android:id="@+id/search_screen_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="66dp"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/default_text_size"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Here comes the sun (Remastered 2009)"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="34dp">

        <TextView
            android:id="@+id/search_screen_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/PM_text_grey"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="The Beatles"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_dot"
            app:tint="@color/PM_text_grey"/>

        <TextView
            android:id="@+id/search_screen_track_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="@dimen/small_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/PM_text_grey"
            tools:text="2:55"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/search_screen_icon_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_arrow_right"
        app:tint="@color/PM_text_grey"/>

</FrameLayout>