<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/PM_light_grey">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/playlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            tools:text="@tools:sample/cities"
            android:fontFamily="@font/ys_display_bold"
            android:textColor="@color/PM_black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/cover"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/playlist_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            tools:text="@tools:sample/cities"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/PM_black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/playlist_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/playlist_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            tools:text="@tools:sample/cities"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/PM_black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/playlist_description"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/dot_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_dot_divider"
            app:tint="@color/PM_black"
            app:layout_constraintStart_toEndOf="@id/playlist_duration"
            app:layout_constraintTop_toTopOf="@id/playlist_duration"
            app:layout_constraintBottom_toBottomOf="@id/playlist_duration"/>

        <TextView
            android:id="@+id/tracks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            tools:text="@tools:sample/cities"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/PM_black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/dot_divider"
            app:layout_constraintTop_toTopOf="@id/playlist_duration"/>

        <ImageView
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_share"
            app:tint="@color/PM_black"
            app:layout_constraintTop_toBottomOf="@id/playlist_duration"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintTop_toBottomOf="@id/playlist_duration"
            app:layout_constraintStart_toEndOf="@id/share_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_arrow_back"/>

    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/bottom_sheet_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_top_16dp"
        android:backgroundTint="?attr/backgroundColor"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="266dp">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_handle"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            app:drawableTopCompat="@drawable/error_placeholder_nothing_found"
            android:text="@string/no_tracks_in_playlist"
            style="@style/DefaultText"
            android:textSize="24sp"
            android:fontFamily="@font/ys_display_regular"
            android:textStyle="bold"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_top_16dp"
        android:backgroundTint="?attr/backgroundColor"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="383dp">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_handle"
            android:layout_gravity="center_horizontal"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/menu_cover"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                tools:src="@tools:sample/backgrounds/scenic"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/menu_playlist_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="66dp"
                android:layout_marginTop="14dp"
                style="@style/DefaultText"
                tools:text="Best Songs"/>

            <TextView
                android:id="@+id/menu_tracks_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="34dp"
                style="@style/TextGreyWhite11sp"
                android:textSize="11sp"
                tools:text="98 tracks"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_share_button"
            android:layout_width="match_parent"
            android:layout_height="61dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="16dp"
                style="@style/DefaultText"
                android:text="@string/share"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_edit_playlist"
            android:layout_width="match_parent"
            android:layout_height="61dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="16dp"
                style="@style/DefaultText"
                android:text="@string/edit_information"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_delete_playlist"
            android:layout_width="match_parent"
            android:layout_height="61dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="16dp"
                style="@style/DefaultText"
                android:text="@string/delete_playlist"/>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>